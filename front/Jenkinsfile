pipeline {
  agent {
    docker {
      image 'node:latest'
    }
  }

  stages {
    stage('install') {
      steps {
        sh 'npm install'
      }
    }

    stage('build') {
      steps {
        sh 'npm run-script build'
      }
    }

    stage('test') {
      steps {
        sh 'npm run-script test'
      }
    }
  }
}
